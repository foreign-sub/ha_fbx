{
    "variables": {
        "img_mount_path": "/tmp/mnt"
    },
    "builders": [
        {
            "name": "hafbx",
            "type": "arm-image",
            "chroot_mounts": [
                [
                    "proc",
                    "proc",
                    "/proc"
                ],
                [
                    "sysfs",
                    "sysfs",
                    "/sys"
                ],
                [
                    "bind",
                    "/dev",
                    "/dev"
                ],
                [
                    "devpts",
                    "devpts",
                    "/dev/pts"
                ],
                [
                    "binfmt_misc",
                    "binfmt_misc",
                    "/proc/sys/fs/binfmt_misc"
                ]
            ],
            "image_type": "raspberrypi",
            "image_mounts": [
                "/",
                "/boot/efi"
            ],
            "iso_url": "{{user `is_url`}}",
            "iso_checksum": "none",
            "mount_path": "{{ user `img_mount_path` }}",
            "qemu_binary": "qemu-aarch64-static"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo mkdir -p /var/lib/cloud/seed/nocloud-net"
            ]
        },
        {
            "type": "file",
            "source": "{{user `init_path`}}/nocloud-net",
            "destination": "/var/lib/cloud/seed/"
        },
        {
            "type": "file",
            "source": "{{user `init_path`}}/pa-system.conf",
            "destination": "/etc/dbus-1/system.d/pa-system.conf"
        },
        {
            "type": "shell",
            "inline": [
                "sudo /usr/bin/patch /usr/lib/os-release {{user `init_path`}}/os-release.patch"
            ]
        },        
        {
            "type": "shell",
            "inline": [
                "sudo apt-get clean",
                "sudo apt-get update",
                "sudo apt-get install -yqq jq udisks2 libglib2.0-bin network-manager apt-transport-https ca-certificates gnupg-agent software-properties-common gnupg unzip bluetooth rauc-service"
            ]
        }
    ]
}

